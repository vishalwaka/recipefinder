<h1>Searching for - <%= @search_term %></h1>


<% if @recipes.nil? %>
 No item with <%=  @search_term %>

<% else %>
<table border="1">
  <tr>
  	<th>Thumbnail</th>
  	<th>Title</th>
  	<th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
	  
      <td><%= link_to image_tag(recipe["image_url"],width: '100', height: '100'), recipe["source_url"] %></td>
      <td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
<% end %>